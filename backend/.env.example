# ============================================
# APPLICATION
# ============================================
APP_NAME=Eau de Ceci API
APP_VERSION=1.0.0
DEBUG=true

# ============================================
# DATABASE
# ============================================

# Local Development (con docker-compose)
DATABASE_URL=postgresql://eaudececi:eaudececi123@db:5432/eaudececi

# Production (Render PostgreSQL)
# DATABASE_URL=postgresql://user:password@host:port/database

# ============================================
# CORS
# ============================================
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000", "*"]

# ============================================
# KEYCLOAK / OIDC AUTHENTICATION
# ============================================

# URL de Keycloak
# Desarrollo: http://localhost:8080
# Producción: https://tu-keycloak.com
KEYCLOAK_SERVER_URL=http://localhost:8080

# Realm name (crear en Keycloak UI)
KEYCLOAK_REALM=eaudececi

# Client ID del backend (crear en Keycloak UI)
KEYCLOAK_CLIENT_ID=backend

# Client Secret (obtener de Keycloak UI → Clients → backend → Credentials)
# IMPORTANTE: Cambiar esto después de crear el client en Keycloak
KEYCLOAK_CLIENT_SECRET=CAMBIAR_DESPUES_DE_CREAR_CLIENT_EN_KEYCLOAK

# Audience esperado en el JWT (usualmente igual al client_id)
KEYCLOAK_AUDIENCE=backend

# ============================================
# FRONTEND CONFIG
# ============================================

# URL del frontend (para redirects)
FRONTEND_URL=http://localhost:8000

# Callback URL (donde Keycloak redirige después del login)
CALLBACK_URL=http://localhost:8000/api/auth/callback
